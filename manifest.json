{
  "manifest_version": 2,

  "name": "The Mustache Game",
  "description": "A Chrome extension version of the popular drinking game.",
  "version": "1.0",
  "background": {
    "page": "background.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "page_action": {
    "default_icon": {                    
      "19": "icons/icon19.png",
      "38": "icons/icon38.png"
    },
    "default_title": "Play the Mustache Game!"
  },
  "permissions": [
    "declarativeContent",
    "tabs",
    "http://www.netflix.com/",
    "https://www.netflix.com/",
    "http://www.youtube.com/",
    "https://www.youtube.com/"
  ],
  "web_accessible_resources": [
    "images/mustache1.svg",
    "images/mustache2.svg",
    "images/mustache3.svg"
  ]
}